<div class="form_creator_no_scroll">
    <!-- This file is controlled by app/assets/javascripts/new_guide_form/new_sections_and_tasks.js -->

    <%= form_for(@guide) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div id="input_guide_form">
            <div>
                <%= render 'shared/simple_guide_creator/guide_creator_introduction'%>
            </div>
            <div>
                <!--<div id="new_guide_title">Guide Title:</div>-->
                <!--<input id="new_guide_title_edit" placeholder="Add a Title...">-->
                <%= f.label :title, id: "new_guide_title" %>
                <%= f.text_field :title, placeholder: "Add a title...",  id: 'new_guide_title_edit' %>
            </div>

            <div>
                <!--<div id="new_guide_description">Guide Description:</div>-->
                <!--<textarea id="new_guide_description_edit" placeholder="Add a Description..."></textarea>-->
                <%= f.label :description, id: "new_guide_description" %>
                <%= f.text_field :description, placeholder: "Add a description...",  id: 'new_guide_description_edit' %>
            </div>


            <div>
                <!--<div id="new_guide_description">Guide Description:</div>-->
                <!--<textarea id="new_guide_description_edit" placeholder="Add a Description..."></textarea>-->
                <%= f.label :content, id: "new_guide_description" %>
                <%= f.text_area :content, placeholder: "Use Markdown to add your own content! \nCheck out the instructions button above. ",  id: 'new_guide_content_edit' %>
            </div>


            <!--<button type="button" class="btn btn-sm btn-success new_section_button" id="new_section_button"> Add Section </button>-->
            <div class="submit_preview_button btn btn-md btn-info" id="content_preview"> Preview </div>

            <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
        </div>
    <% end %>
</div>


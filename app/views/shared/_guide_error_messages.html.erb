<% if @guide.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-danger">
            This guide contains <%= pluralize(@guide.errors.count, "error") %>.
        </div>
        <ul>
            <% @guide.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>

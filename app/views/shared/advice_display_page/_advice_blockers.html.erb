<div id="blockers" class="advice_blockers advice_container">
    <h5 class="flexible_advice">
    </h5>
    <h4 class="center"> Blockers </h4>

    <%= will_paginate @blockers%>

    <% @blockers.each do |blocker| %>
        <div class="tidbit_wrapper">
            <div class="tidbit_box">
                <div class="tidbit_flex">
                    <span class="vote-vote circle">
                        <span class="vote-increment vote-up"></span>
                        <span class="vote-increment vote-down"></span>
                        <span class="vote-count">1</span>
                    </span>

                    <span class="advice_title"><%= link_to blocker.user.name, blocker.user %>  </span>
                    <span class="advice_title"><%=blocker.title %></span>
                </div>
            </div>
             <span class="centered advice_tidbit_information">
                Created on <%= blocker.created_at.to_formatted_s(:long) %>
            </span>
        </div>
        <% end %>

    <%= will_paginate @blockers%>


    <script>
//        This will not work in its current form
        $(function(){
            $(".vote-increment").click(function(){
                var count = parseInt($("~ .vote-count", this).text());
                if($(this).hasClass("vote-up")) {
                    count = count + 1;

                    $("~ .vote-count", this).text(count);
                } else {
                    count = count - 1;
                    $("~ .vote-count", this).text(count);
                }

                $(this).parent().addClass("vote-bump");

                setTimeout(function(){
                    $(this).parent().removeClass("vote-bump");
                }, 400);
            });
        });
    </script>

</div>
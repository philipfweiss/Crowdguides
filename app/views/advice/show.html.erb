

<% provide(:title, 'Advice Portals') %>
<div class="breadcrumbs"><%= link_to "#{@guide.title}", "/guides/#{@guide.id}" %> < Advice Portal  <%= @advice.inner_guide_id %> </div>


<div class="tidbit_index_wrapper">
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#questions">Questions</a></li>
        <li><a data-toggle="tab" href="#issues">Issues</a></li>
        <li><a data-toggle="tab" href="#tips">Tips</a></li>
    </ul>

    <div class="tab-content">
        <div id="questions" class="tab-pane fade in active">
            <% if @questions.any? %>
                    <%= render 'shared/advice_display_page/advice_questions'%>
            <% else %>
                <div class="center very_padded">
                    No questions have been asked yet!
                </div>
            <% end %>

        </div>

        <div id="issues" class="tab-pane fade">
            <% if @issues.any?%>
                    <%= render 'shared/advice_display_page/advice_issues'%>
            <% else %>
                <div class="center very_padded">
                    No issues have been added yet!
                </div>
            <% end %>

        </div>

        <div id="tips" class="tab-pane fade">
            <% if @tips.any?%>
                    <%= render 'shared/advice_display_page/advice_tips'%>
            <% else %>
                <div class="center very_padded">
                    No tips have been added yet!
                </div>
            <% end %>

        </div>

    </div>
</div>





